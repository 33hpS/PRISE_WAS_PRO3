{
  "compilerOptions": {
    // Современные стандарты для функциональной архитектуры
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    // Bundler-специфичные опции
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // JSX для React компонентов мебельной фабрики
    "jsx": "react-jsx",
    
    // Типобезопасность (критично для ценообразования)
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    // Производительность компиляции
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Path mapping для чистой архитектуры
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/furniture/*": ["./src/types/furniture/*"]
    },
    
    // Отключаем предупреждения для оптимизации разработки
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "vite.config.ts",
    "**/*.backup.*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
