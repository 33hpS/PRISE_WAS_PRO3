# Production конфигурация для Cloudflare Pages

# Supabase configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin emails для мебельной фабрики
VITE_ADMIN_EMAIL_1=admin@wasser.ru
VITE_ADMIN_EMAIL_2=manager@wasser.ru  
VITE_ADMIN_EMAIL_3=director@wasser.ru

# API Configuration
VITE_API_BASE_URL=https://api.wasser.ru
VITE_API_VERSION=v1

# Furniture catalog settings
VITE_DEFAULT_CURRENCY=RUB
VITE_ENABLE_PDF_GENERATION=true
VITE_MAX_CATALOG_ITEMS=1000

# Performance settings
VITE_ENABLE_LAZY_LOADING=true
VITE_CACHE_DURATION=300000

# Build environment
NODE_ENV=production
