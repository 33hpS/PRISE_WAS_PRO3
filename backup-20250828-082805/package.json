{
  "name": "wasser-furniture-factory",
  "version": "1.0.0",
  "description": "🏗️ Система управления мебельной фабрикой WASSER с функциональной архитектурой и типобезопасностью",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host --port 5173",
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "type-check:watch": "tsc --noEmit --skipLibCheck --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" --config .prettierrc",
    "test": "echo \"Tests not configured yet\" && exit 0",
    "test:run": "echo \"Tests not configured yet\" && exit 0",
    "test:coverage": "echo \"Test coverage not configured yet\" && exit 0",
    "test:ui": "echo \"Test UI not configured yet\" && exit 0",
    "setup:hooks": "husky install",
    "setup:hooks:pre-commit": "husky add .husky/pre-commit \"npm run pre-commit\"",
    "setup:hooks:pre-push": "husky add .husky/pre-push \"npm run pre-push\"",
    "setup:hooks:commit-msg": "husky add .husky/commit-msg \"npx commitlint --edit $1\"",
    "setup:complete": "npm run setup:hooks && npm run setup:hooks:pre-commit && npm run setup:hooks:pre-push && npm run setup:hooks:commit-msg && echo \"✅ Husky hooks настроены успешно!\"",
    "pre-commit": "lint-staged && npm run type-check",
    "pre-push": "npm run build && npm run test:run",
    "commit:auto": "tsx scripts/auto-commit.ts auto general 'Автообновление WASSER'",
    "commit:components": "tsx scripts/auto-commit.ts feature components 'Обновление компонентов мебели'",
    "commit:materials": "tsx scripts/auto-commit.ts refactor materials 'Рефакторинг системы материалов'",
    "commit:pricing": "tsx scripts/auto-commit.ts fix pricing 'Исправление расчетов цен'",
    "commit:pdf": "tsx scripts/auto-commit.ts feature pdf 'Улучшение PDF генерации'",
    "commit:collections": "tsx scripts/auto-commit.ts feat collections 'Обновление мебельных коллекций'",
    "commit:docs": "tsx scripts/auto-commit.ts docs general 'Обновление документации'",
    "commit:dry": "tsx scripts/auto-commit.ts auto general 'Тест коммита' --dry-run",
    "wasser:commit": "tsx scripts/wasser-automation.ts commit",
    "wasser:release": "tsx scripts/wasser-automation.ts release",
    "wasser:analyze": "tsx scripts/wasser-automation.ts analyze",
    "wasser:maintenance": "tsx scripts/wasser-automation.ts maintenance",
    "release:patch": "npm version patch --no-git-tag-version && npm run wasser:commit && git push",
    "release:minor": "npm version minor --no-git-tag-version && npm run wasser:commit && git push",
    "release:major": "npm version major --no-git-tag-version && npm run wasser:commit && git push",
    "metrics": "tsx scripts/collect-metrics.ts",
    "analyze:bundle": "npm run build:analyze",
    "analyze:deps": "depcheck && ncu --target minor",
    "analyze:types": "npx type-coverage --detail --at-least 90 || echo \"⚠️ Type coverage analysis не настроен\"",
    "clean:install": "npm run clean && npm install",
    "audit:fix": "npm audit fix --force",
    "audit:check": "npm audit --audit-level moderate",
    "type-check:soft": "tsc --noEmit --skipLibCheck --allowJs --strict false",
    "lint:soft": "eslint src --ext ts,tsx --max-warnings 20",
    "build:force": "vite build --force",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules",
    "commit": "git add . && git commit",
    "push": "git push",
    "pull": "git pull",
    "dashboard:type-check": "tsc --noEmit",
    "dashboard:lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dashboard:clean": "rm -rf dist node_modules/.vite",
    "dashboard:test": "vitest",
    "dashboard:preview": "vite preview",
    "dashboard:dev": "vite --mode development",
    "dashboard:analyze": "npm run build && npx source-map-explorer 'dist/assets/*.js'",
    "dashboard:build": "tsc && vite build --mode production"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 100",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write --config .prettierrc"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.56.0",
    "@types/react-router-dom": "^5.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "cors": "^2.8.5",
    "embla-carousel-react": "^8.6.0",
    "express": "^5.1.0",
    "input-otp": "^1.4.2",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.376.0",
    "next-themes": "^0.4.6",
    "puppeteer": "^24.17.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.5",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.1.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "vaul": "^1.1.2",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
