#!/bin/bash
echo "üîç –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–µ pre-commit –ø—Ä–æ–≤–µ—Ä–∫–∏ WASSER..."

# 1. –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–¥–∞
echo "‚ú® –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è..."
npm run format:check || {
  echo "‚ùå –ö–æ–¥ —Ç—Ä–µ–±—É–µ—Ç —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è. –ó–∞–ø—É—Å—Ç–∏—Ç–µ: npm run format"
  exit 1
}

# 2. TypeScript —Ç–∏–ø–∏–∑–∞—Ü–∏—è (–∫—Ä–∏—Ç–∏—á–Ω–æ)
echo "üèóÔ∏è TypeScript –∞—Ä—Ö–∏—Ç–µ–∫—Ç—É—Ä–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞..."
npm run type-check || {
  echo "‚ùå –ö—Ä–∏—Ç–∏—á–µ—Å–∫–∏–µ –æ—à–∏–±–∫–∏ —Ç–∏–ø–∏–∑–∞—Ü–∏–∏. –ò—Å–ø—Ä–∞–≤—å—Ç–µ –ø–µ—Ä–µ–¥ –∫–æ–º–º–∏—Ç–æ–º"
  exit 1
}

# 3. ESLint (—Ä–∞–∑—Ä–µ—à–∞–µ–º –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è)
echo "üîß ESLint –ø—Ä–æ–≤–µ—Ä–∫–∞ –∞—Ä—Ö–∏—Ç–µ–∫—Ç—É—Ä—ã..."
npm run lint || {
  echo "‚ö†Ô∏è ESLint –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è –æ–±–Ω–∞—Ä—É–∂–µ–Ω—ã, –Ω–æ –∫–æ–º–º–∏—Ç —Ä–∞–∑—Ä–µ—à–µ–Ω"
}

echo "‚úÖ –§—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω—ã–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø—Ä–æ–π–¥–µ–Ω—ã!"
